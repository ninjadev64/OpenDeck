{
	"$schema": "https://schema.tauri.app/config/2",
	"build": {
		"beforeBuildCommand": "deno task build",
		"beforeDevCommand": "deno task dev",
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"resources": { "target/plugins/": "plugins/" },
		"linux": {
			"deb": {
				"desktopTemplate": "bundle/opendeck.desktop",
				"files": {
					"/etc/udev/rules.d/40-streamdeck.rules": "bundle/40-streamdeck.rules",
					"/usr/share/metainfo/opendeck.metainfo.xml": "bundle/opendeck.metainfo.xml"
				}
			},
			"rpm": {
				"desktopTemplate": "bundle/opendeck.desktop",
				"files": {
					"/etc/udev/rules.d/40-streamdeck.rules": "bundle/40-streamdeck.rules",
					"/usr/share/metainfo/opendeck.metainfo.xml": "bundle/opendeck.metainfo.xml"
				}
			}
		},
		"publisher": "Aman Khanna (nekename)",
		"shortDescription": "Use stream controllers",
		"longDescription": "OpenDeck is a desktop application for using stream controller devices like the Elgato Stream Deck. OpenDeck supports plugins made for the original Stream Deck SDK, allowing many plugins made for the Elgato software ecosystem to be used.",
		"category": "Productivity",
		"icon": [
			"icons/icon.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"exceptionDomain": "localhost"
		}
	},
	"productName": "OpenDeck",
	"mainBinaryName": "opendeck",
	"version": "2.4.2",
	"identifier": "opendeck",
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["opendeck"]
			}
		}
	},
	"app": {
		"windows": [
			{
				"title": "OpenDeck",
				"fullscreen": false,
				"resizable": true,
				"width": 800,
				"height": 600,
				"minWidth": 800,
				"minHeight": 600,
				"center": true,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: http://localhost:57118 https://openactionapi.github.io https://plugins.amankhanna.me; frame-src http://localhost:57118; connect-src ipc: http://ipc.localhost https://openactionapi.github.io https://api.github.com https://plugins.amankhanna.me;"
		},
		"withGlobalTauri": true
	}
}
